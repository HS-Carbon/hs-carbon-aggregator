name:                carbon-aggregator
version:             0.1.0.0
-- synopsis:
-- description:
license:             Apache-2.0
license-file:        LICENSE
author:              Maksim Zakharov
maintainer:          zakharov@lumoza.ru
-- copyright:
-- category:
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  exposed-modules:
    Carbon,
    Carbon.Aggregator,
    Carbon.Aggregator.Buffer,
    Carbon.Aggregator.Processor,
    Carbon.Aggregator.Server
  build-depends:
    base >=4.7 && <4.8,
    regex-pcre-builtin ==0.94.*,
    bytestring ==0.10.*,
    stringsearch ==0.3.6.6,
    containers ==0.5.*,
    stm -any,
    split ==0.2.2,
    network == 2.6.*
  ghc-prof-options: -auto-all -prof
  ghc-options: -Wall
  hs-source-dirs:      src/library
  default-language:    Haskell2010

executable carbon-aggregator
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.7 && <4.8,
                       carbon-aggregator -any,
                       network -any,
                       stm -any
  hs-source-dirs:      src/daemon
  default-language:    Haskell2010

test-suite lint
  type: exitcode-stdio-1.0
  main-is: HLint.hs
  build-depends:
    base -any,
    hlint ==1.*
  default-language: Haskell2010
  hs-source-dirs: test-suite
  ghc-options: -Wall -Werror

test-suite tests
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  build-depends:
    base -any,
    carbon-aggregator -any,
    regex-pcre-builtin -any,
    bytestring -any,
    stringsearch -any,
    split -any,
    containers -any,
    hspec ==2.*,
    HUnit -any,
    QuickCheck -any
  default-language: Haskell2010
  hs-source-dirs: src/library test-suite
  ghc-options: -fhpc -Wall -Werror -fno-warn-orphans
